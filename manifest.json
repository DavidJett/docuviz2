{
  "manifest_version": 2,

  "name": "Docuviz 2.0",
  "version": "2.0",
  "description": "Visualize authors' contribution in a Google Doc",
  "background": {
    "scripts": ["js/lib/underscore.js", "js/lib/jquery.min.js","js/lib/async.js","js/model.js","js/lib/d3.min.js"]
  },
  "content_scripts":[{
    "matches" : ["*://docs.google.com/*"],
    "css": ["css/global.css"],
    "js": ["js/lib/underscore.js", "js/lib/jquery.min.js","js/view.js","js/lib/d3.min.js"]
  }],
  "permissions": [
    "webRequest",
    "tabs",
    "activeTab",
    "*://docs.google.com/*"
  ],
  "web_accessible_resources": [
      "css/global.css",
      "js/lib/underscore-min.map"
    ]
}
